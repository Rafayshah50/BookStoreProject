@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-secondary bg-gradient text-light py-3">
                    <h4 class="text-center m-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row gy-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.Name" class="form-control" autocomplete="username" placeholder="Name" />
                                    <label asp-for="Input.Name">Username</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mt-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mt-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" type="password" placeholder="Password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating mt-3">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" type="password" placeholder="Confirm Password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mt-3">
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                        <option disabled selected>- Select Role -</option>
                                    </select>
                                    <label asp-for="Input.Role">Role</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.PhoneNumber" class="form-control" type="text" placeholder="Phone Number" />
                                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="form-floating mt-3">
                                    <input asp-for="Input.StreetAddress" class="form-control" placeholder="123 Main St" />
                                    <label asp-for="Input.StreetAddress">Street Address</label>
                                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                </div>
                                <div class="form-floating mt-3">
                                    <input asp-for="Input.City" class="form-control" placeholder="City" />
                                    <label asp-for="Input.City">City</label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                <div class="form-floating mt-3">
                                    <input asp-for="Input.State" class="form-control" placeholder="State or Province" />
                                    <label asp-for="Input.State">State or Province</label>
                                    <span asp-validation-for="Input.State" class="text-danger"></span>
                                </div>
                                <div class="form-floating mt-3">
                                    <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                                    <label asp-for="Input.PostalCode">Postal Code</label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-5">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-50">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
