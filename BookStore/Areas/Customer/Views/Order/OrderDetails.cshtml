@model ViewModelForDetail

<div class="container mt-3">
    <div class="card-header bg-secondary bg-gradient text-light py-2 mb-2">
        <h4 class="text-center m-0">Order Details</h4>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary bg-gradient text-white">Customer Details</div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" class="form-control" value="@Model.UserName" readonly>
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="text" class="form-control" value="@Model.Phone" readonly>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <textarea class="form-control" readonly>@Model.Address</textarea>
                        </div>
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" class="form-control" value="@Model.City" readonly>
                        </div>
                        <div class="form-group">
                            <label>State</label>
                            <input type="text" class="form-control" value="@Model.State" readonly>
                        </div>
                        <div class="form-group">
                            <label>Postal Code</label>
                            <input type="text" class="form-control" value="@Model.PostalCode" readonly>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>

                            <td>@item.ProductName</td>
                            <td class="price">@($"{(item.UnitPrice).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))}")</td>
                            <td>@item.Quantity</td>
                            <td class="item-total">@($"{(item.UnitPrice * item.Quantity).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))}")</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="mt-4">
                <h4>Total Price: <span id="totalPrice">@($"{(Model.TotalPrice).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))}")</span></h4>
            </div>
        </div>
    </div>
</div>

